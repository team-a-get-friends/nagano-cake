<h4 class="mx-3 my-3 text-secondary">ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス, class:"mx-3 my-3 text-secondary" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class:"mx-3 my-3 text-secondary" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <!--<%# if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%#= f.check_box :remember_me %>-->
  <!--    <%#= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<%# end %>-->
  
  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-outline-primary ml-3 btn-sm" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
