<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mx-3 my-5 text-secondary border border-3 rounded-top col-2 text-center" alt="...">商品一覧</h4>
      <div class="text-secondary mx-2">
        （全<%= @items.count %>件）
      </div>

      <% @items.each do |item| %>
      <div class="text-secondary mx-3 my-3">
        <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_item_image(100,100) %>
        <% end %>

        <%= item.name %>
      ￥<%= item.price %>
      </div>
      <% end %>

<!--ページ送りを追加（表示するには、商品が８件以上必要）-->
      <%= paginate @items %>
    </div>
  </div>
</div>