<h2>注文確認</h2>

<table class='table'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <%= @cart_items.each do |cart_item| %>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>

<table class='table'>
    <tr>
      <th>送料</th><td><%= Order.shipping_fee%></td>
      <th>商品合計</th><td><%= @total_item_price %></td>
      <th>請求金額</th><td><%= @order.total_price %></td>
    </tr>
</table>

<p>支払方法</p>
<%= @order.payment_method %>

<p>お届け先</p>
<%= @order.address_display %>

<%= link_to "注文を確定する", orders_path, method: :post %>
