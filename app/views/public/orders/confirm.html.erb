<div class="container">
  <div class="row">
    <div class="col">
<h4 class="my-5 text-secondary border border-3 rounded-top text-center col-3" alt="...">注文確認</h4>

<table class='table table-hover align-middle text-secondary'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @cart_items.each do |cart_item| %>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal %>
      </td>
      <% @total_item_price += cart_item.subtotal %>
    <% end %>
    </tr>
  </tbody>
</table>

<table class='table table-hover align-middle text-secondary'>
  <tr>
    <th>送料</th><td><%= @order.shipping_fee%></td>
  </tr>
  <tr>
    <th>商品合計</th><td><%= @total_item_price %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td>
      <% @order.total_price += @order.shipping_fee + @total_item_price %>
      <%= @order.total_price %>
    </td>
  </tr>
</table>

<div class="text-secondary mx-2 my-3">
  <b>支払方法</b>
<!--末尾に_i18nすることで日本語化-->
<%= @order.payment_method_i18n %>
</div>
<div class="text-secondary mx-2 my-3">
<b>お届け先</b>
<%= @order.address_display %>
</div>

<!--link_toではデータを送ることができない→form_with-->
<!--hidden_fieldで情報を送ることができる-->
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <!--必要な情報をすべて送る必要がある-->
	<%= f.hidden_field :customer_id, :value => current_customer.id %>
	<%= f.hidden_field :post_code, :value => @order.post_code %>
	<%= f.hidden_field :address, :value => @order.address %>
	<%= f.hidden_field :name, :value => @order.name %>
	<%= f.hidden_field :shipping_fee, :value => @order.shipping_fee %>
	<%= f.hidden_field :total_price, :value => @order.total_price %>
	<%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.submit "注文を確定する", class:"btn btn-outline-success ml-3 btn-sm" %>
<% end %>
 </div>
  </div>
</div>