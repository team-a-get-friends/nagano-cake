<h2>注文履歴詳細</h2>

<p>注文情報</p>
<table>
  <tr>
    <!--日にちの表記要変更-->
    <th>注文日</th><td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= order.post_code %><br>
      <%= order.address %><br>
      <%= order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th><td><%= @order.payment_method %></td>
    <th>ステータス</th><td><%= @order.status %></td>
  </tr>
</table>

<p>請求情報</p>
<table>
  <tr>
    <th>商品合計</th><td><%= @total_item_price %></td>
  </tr>
  <tr>
    <th>配送料</th><td><%= Order.shipping_fee %></td>
  </tr>
  <tr>
    <th>ご請求額</th><td><%= @order.total_price %></td>
  </tr>
</table>

<p>注文内容</p>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% order.order_details.each do |order_detail| %>
    <tr>
      <td><%= Item.find(order_detail.item_id).name %></td>
      <td><%= Item.find(order_detail.item_id).price %></td>
      <td><%= Item.find(order_detail.item_id).amount %></td>
      <td><%= Item.find(order_detail.item_id).subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>
