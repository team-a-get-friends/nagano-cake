<h3 class="mx-3 my-3 text-secondary">ショッピングカート</h3>

<%= link_to "カートを空にする", destroy_all_cart_items_path ,method: :delete, class:"btn btn-outline-danger ml-3 btn-sm" %>

<table class="table table-hover align-middle text-secondary">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.with_tax_price %></td>
      <td>
        <% form_with model: @cart_item, url: cart_item_path, method: :patch do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), class:"btn btn-outline-danger ml-3 btn-sm" %></td>
    </tr>
  </tbody>
</table>

	    <% @total_item_price += cart_item.subtotal %>
    <% end %>

<table class="table table-hover align-middle col-3 text-secondary">
  <tbody>
    <td>合計金額</td>
    <td><%= @total_item_price %></td>
  </tbody>
</table>

<div class="text-left">
  <%= link_to "買い物を続ける", root_path, class:"btn btn-outline-primary ml-3 btn-sm" %>
</div>

<div class="text-center">
  <%= link_to "情報入力に進む", new_order_path, class:"btn btn-outline-success ml-3 btn-sm" %>
</div>

<!--hidden_fieldを使用して注文確認画面に合計金額を送る-->
<% form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
	<% f.hidden_field :total_item_price, value: @total_item_price %>
<% end %>