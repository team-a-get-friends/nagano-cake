<h2>ショッピングカート</h2>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <!--モデルが異なっても呼び出しできるが、当該のモデルの呼び出しも必要-->
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <!--each分の中はインスタンス変数ではない-->
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id) %></td>
    </tr>
    <% @total_item_price += cart_item.subtotal %>
  <% end %>
  </tbody>
</table>

<table class="table">
  <tr>
    <th>合計金額</th>
    <td><%= @total_item_price %></td>
  </tr>
</table>

<%= link_to "カートを空にする", destroy_all_cart_items_path ,method: :delete %>


