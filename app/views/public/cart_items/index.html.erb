<h2>ショッピングカート</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.with_tax_price %></td>
      <td>
        <%= cart_item.amount %>
        <!--紐づけるアクションがわからない、とりあえず商品詳細ページに戻す-->
        <%= link_to "変更", item_path(params[:item_id]) %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id) %></td>
    </tr>
  </tbody>
</table>

	    <% @total_item_price += cart_item.subtotal %>
    <% end %>

<table>
  <tbody>
    <td>合計金額</td>
    <td><%= @total_item_price %></td>
  </tbody>
</table>

<%= link_to "カートを空にする", destroy_all_cart_items_path ,method: :delete %>

<%= link_to "買い物を続ける", root_path %>

<%= link_to "情報入力に進む", new_order_path %>


<!--hidden_fieldを使用して注文確認画面に合計金額を送る-->
<% form_with model:@order, url: confirm_orders_path, method: :post do |f| %>
	<% f.hidden_field :total_item_price, value: @total_item_price %>
<% end %>