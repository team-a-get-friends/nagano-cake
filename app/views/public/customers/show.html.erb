<!--会員マイページ画面-->

<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mx-3  my-5 text-secondary border border-3 rounded-top col-2 text-center" alt="...">マイページ</h4>
        <div class="d-flex align-items-center">
          <h5 class="mx-3 my-3 text-secondary"><b>登録情報</b></h5>
          <!--会員情報編集画面に遷移(public/customers/edit.html)-->
          <%= link_to "編集する", edit_customer_path(params[:id]), class:"btn btn-outline-success ml-2 btn-sm" %>
        </div>
          <table class="table table-hover align-middle text-secondary">
            <tr>
              <td class="bg-light">氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>

            <tr>
              <td class="bg-light">カナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>

            <tr>
						<!--(ハイフンなし)追記-->
              <td class="bg-light">郵便番号(ハイフンなし)</td>
              <td><%= @customer.post_code %></td>
            </tr>

            <tr>
              <td class="bg-light">住所</td>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
						<!--(ハイフンなし)追記-->
              <td class="bg-light">電話番号(ハイフンなし)</td>
              <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
              <td class="bg-light">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </table>
            <div class="d-flex align-items-center">
              <h5 class="mx-3 my-3 text-secondary"><b>配送先</b></h5>
            <div id="a1">
              <%= link_to "一覧を見る", addresses_path, class:"btn btn-outline-primary btn-sm" %>
            </div>
            </div>


            <div class="d-flex align-items-center">
              <h5 class="mx-3 my-3 text-secondary"><b>注文履歴</b></h5>
              <%= link_to "一覧を見る", orders_path, class:"btn btn-outline-primary ml-2 btn-sm" %>
           </div>
    </div>
  </div>
</div>
