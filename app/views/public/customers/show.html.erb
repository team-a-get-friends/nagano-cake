<!--会員マイページ画面-->

<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">マイページ</h4>
        <div class="d-flex align-items-center">
          <h3><b>登録情報</b></h3>
          <!--会員情報編集画面に遷移(public/customers/edit.html)-->
          <%= link_to "編集する", edit_customer_path(params[:id]), class:"btn btn-success ml-3" %>
        </div>
          <table class="table table-bordered">
            <tr>
              <td class="bg-light">氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>

            <tr>
              <td class="bg-light">カナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>

            <tr>
						<!--(ハイフンなし)追記-->
              <td class="bg-light">郵便番号(ハイフンなし)</td>
              <td><%= @customer.post_code %></td>
            </tr>

            <tr>
              <td class="bg-light">住所</td>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
						<!--(ハイフンなし)追記-->
              <td class="bg-light">電話番号(ハイフンなし)</td>
              <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
              <td class="bg-light">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </table>
            <div class="d-flex align-items-center">
              <h3><b>配送先</b></h3>
<!--正しいほうに統一-->
              <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
              <%= link_to "一覧を見る", addresses_path %>
            </div>
     
      
            <div class="d-flex align-items-center">
              <h3><b>注文履歴</b></h3>
              <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
           </div>
    </div>
  </div>
</div>
