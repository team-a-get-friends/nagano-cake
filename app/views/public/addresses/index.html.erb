<h2>配送先登録/一覧</h2>

<!--, locals: {view_name: 'index'}-->
<%= render 'form', address: @address %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td>
        <%= address.post_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id) %>
        <%= link_to "削除する", address_path(address.id), method: :delete %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>