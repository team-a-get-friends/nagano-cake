<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5 text-secondary border border-3 rounded-top text-center col-3">配送先登録/一覧</h4>

    <div>
      <%= render 'form', address: @address %>
    </div>

    <table class="table table-hover align-middle text-secondary">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td>
            <div class="border border-secondary form-text text-muted form-control-sm">
              <%= address.post_code %>
            </div>
          </td>
          <td>
            <div class="border border-secondary form-text text-muted form-control-sm">
              <%= address.address %>
            </div>
          </td>
          <td>
            <div class="border border-secondary form-text text-muted form-control-sm">
              <%= address.name %>
            </div>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-outline-success ml-3 btn-sm" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-outline-danger ml-3 btn-sm" %>
          </td>
        <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
