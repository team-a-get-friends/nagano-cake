<%= form_with model:address do |f| %>

<table class="text-secondary">
  <tr>
    <td><%= f.label :post_code, "郵便番号（ハイフンなし）" %></td>
    <td><%= f.text_field :post_code, placeholder: "0000000", class:"ml-3 border border-secondary col-8 form-control-sm" %></td>
  </tr>

  <tr>
    <td><%= f.label :address, "住所" %></td>
    <td><%= f.text_field :address, placeholder: "東京都渋谷区神園町0-0", class:"ml-3 border border-secondary col-12 form-control-sm" %></td>
  </tr>

  <tr>
    <td><%= f.label :name, "宛名" %></td>
    <td><%= f.text_field :name, placeholder: "令和道子", class:"ml-3 border border-secondary col-8 form-control-sm" %></td>
    <td>
      <% if address.id == nil %>
        <div class="d-flex justify-content-around">
          <%= f.submit "新規登録", class:"btn btn-outline-success ml-3 btn-sm" %>
        </div>
      <% else %>
        <div class="d-flex justify-content-around">      
          <%= f.submit "変更内容を保存", class:"btn btn-outline-success ml-3 btn-sm" %>
        </div>
      <% end %>
    </td>
  </tr>
</table>
<% end %>

