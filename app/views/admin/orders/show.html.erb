<h2 class="mx-3 my-5 text-secondary border border-3 rounded-top col-2 text-center">注文履歴詳細</h2>

<div class="form-group">
  <table>
    <tr>
      <th>購入者</th>
      <td><%= @order.customer.full_name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.post_code %> <%= @order.address %><br>
        <!--nameの表示を逆に修正→orders_controllerのconfirmアクションを修正-->
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td>
        <!--表示を日本語化する必要あり-->
        <%= @order.payment_method_i18n %>
      </td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <!--セレクト-->
        <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
          <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>

<table class="table">
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td>製作ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td>
      <%= order_detail.item.name %>
      </td>
      <td>
      <%= order_detail.item.with_tax_price %>
      </td>
      <td>
      <%= order_detail.amount %>
      </td>
      <td>
      <%= order_detail.subtotal %>
      </td>
      <td>
      <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch do |f| %>
        <!--このままだと英語になってしまう、mapメソッドを使用すると日本語にできる-->
        <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
        <%= f.submit "更新" %>
      <% end %>
      </td>
    </tr>
      <% @total_item_price += order_detail.subtotal %>
    <% end %>
  </tbody>
</table>

<p>商品合計</p>
<%= @total_item_price %>
<p>送料</p>
<%= @order.shipping_fee %>
<p>請求合計金額</p>
<%= @order.total_price %>