<!--管理者が顧客一覧を確認する画面の記述(現在会員の顧客と既に退会している顧客を確認)-->

<div class="container">
  <div class="row">
    <h2>会員一覧</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tr>
            <!--会員ID-->
            <td><%= customer.id %></td>
            <!--氏名-->
            <td><%= customer.first_name %> <%= customer.last_name %></td>
            <!--メールアドレス-->
            <td><%= customer.email %></td>
            <!--ステータス-->
              <!--No Method Error発生でdeletedをactiveに変更-->
           <!--<td class="<%#= customer.is_deleted ? 'text-gray' : 'text-green' %>"><%#= customer.is_deleted ? '退会済み' : '有効' %></td>-->
           <td class="<%= customer.is_active ? 'text-gray' : 'text-green' %>"><%= customer.is_active ? '退会済み' : '有効' %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>