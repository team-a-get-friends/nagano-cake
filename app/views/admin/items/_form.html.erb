<%= form_with model:item, url: url, local:true do |f| %>

	<%= f.label :item_image, "商品画像" %>
	<%= f.file_field :item_image, accept: 'image/*' %>

	<%= f.label :name, "商品名" %>
	<%= f.text_field :name, placeholder: "商品名" %>

	<%= f.label :item_detail, "商品説明" %>
	<%= f.text_area :item_detail, placeholder: "ここに説明文を記述します" %>

	<%= f.label :genre_id, "ジャンル" %>
	<%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id,:name) %>

	<%= f.label :price, "税抜価格" %>
	<%= f.text_field :price, placeholder: "1000" %>円

	<%= f.label :is_active, "販売ステータス" %>
	<%= f.radio_button :is_active, true %>
	<%= f.label :is_active_true, "販売中" %>
	<%= f.radio_button :is_active, false %>
	<%= f.label :is_active_false, "販売停止中"%>

	<%= f.submit  "新規登録"%>

<% end %>