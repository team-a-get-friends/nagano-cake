<h2 class="mx-3 my-5 text-secondary border border-3 rounded-top col-2 text-center">ジャンル編集</h2>
<div class="container justify-center">
  <%= form_with model: @genre, url: admin_genre_path,method: :patch do |f| %>
    <%= f.label :"ジャンル名", class: "mr-3" %>
    <%= f.text_field :name, class: "mr-5" %>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>