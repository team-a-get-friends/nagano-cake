    <h4 class="mx-3 my-5 text-secondary border border-3 rounded-top col-3 text-center" alt="...">ジャンル一覧・追加</h4>
      <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
      <div class="form-group text-secondary mx-3">
        <%= f.label :"ジャンル名", class: "mr-3" %>
        <%= f.text_field :name, class: "mr-5 border border-secondary form-control-sm" %>
        <%= f.submit'新規登録',class: "btn btn-outline-primary ml-3 btn-sm" %>
      </div>
      <% end %>

  <table>
    <thead>
      <tr>
        <th>
          <div class="text-secondary mx-3">
            <b>ジャンル</b>
          </div>
        </th>
      </tr>
    </thead>
            
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success ml-3 btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>