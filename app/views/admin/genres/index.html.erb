    <h2 class="mx-3 my-5 text-secondary border border-3 rounded-top col-2 text-center">ジャンル一覧・追加</h2>

      <div class="container justify-center">
        <div class="form-group">
          <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
            <%= f.label :"ジャンル名", class: "mr-3" %>
            <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>
            <%= f.submit'新規登録',class: "btn btn-outline-success ml-2 btn-sm" %>
          <% end %>
        </div>
        <table class="table table-hover align-middle text-secondary">
          <thead>
            <tr>
              <th>
                ジャンル
              </th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success ml-2 btn-sm" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>