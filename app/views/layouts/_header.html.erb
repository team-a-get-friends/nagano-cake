<!--ロゴの挿入はこれから、リンクのみ作成-->

<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">
  	<nav class="navbar navbar-expand-lg navbar-light bg-light">
  	  <div class="container">
<!--お店のロゴ-->
<span class="border border-4 rounded-pill px-3 py-2" alt="..." >
	<%= link_to "ながのCAKE", root_path %>
</span>

<!--会員ログイン時のヘッダー-->
<% if customer_signed_in? %>

<p>ようこそ、<%= current_customer.last_name %>さん！</p>

<!--マイページリンク-->
	<%= link_to "マイページ", customer_path(current_customer) %>

<!--商品一覧リンク-->
	<%= link_to "商品一覧", items_path %>

<!--カートリンク-->
	<%= link_to "カート", cart_items_path %>

<!--ログアウトリンク-->
	<%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>

<!--管理者ログイン時のヘッダー-->
<% elsif admin_signed_in? %>

<!--商品一覧リンク-->
	<%= link_to "商品一覧", admin_items_path %>

<!--会員一覧リンク-->
	<%= link_to "会員一覧", admin_customers_path %>

<!--注文履歴一覧リンク=会員トップページ-->
	<%= link_to "注文履歴一覧", admin_path %>

<!--ジャンル一覧リンク-->
	<%= link_to "ジャンル一覧", admin_genres_path %>

<!--ログアウトリンク-->
	<%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>

<!--誰もログインしていない時のヘッダー-->
<% else %>

<!--Aboutリンク-->
	<%= link_to "About", about_path %>

<!--商品一覧リンク→ログインしていなくても閲覧できるよう設定-->
	<%= link_to "商品一覧", items_path %>

<!--新規登録リンク-->
	<%= link_to "新規登録", new_customer_registration_path %>

<!--ログインリンク→ここは会員用のURL-->
<!--【？】会員用のログインページにはどうやって行く？-->
	<%= link_to "ログイン", new_customer_session_path %>

<% end %>
			</div>
		</nav>
	</header>
</body>